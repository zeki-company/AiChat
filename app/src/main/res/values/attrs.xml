<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DataCardView">
        <attr name="data_title" format="string" />
        <attr name="data_content" format="string" />
        <attr name="content_text_size" format="dimension" />
        <attr name="data_icon" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="TennisBattleGroundsView">
        <attr name="show_hand" format="boolean" />
        <attr name="title" format="string" />
    </declare-styleable>

    <declare-styleable name="ValueControlView">
        <attr name="max_value" format="integer" />
        <attr name="min_value" format="integer" />
        <attr name="value" format="integer" />
        <attr name="unit" format="string" />
    </declare-styleable>

    <declare-styleable name="BottomNavigationMain">
        <attr name="text_color" format="color" />
        <attr name="text_size" format="dimension" />
    </declare-styleable>


    <declare-styleable name="GapBottomNavigationView">
        <attr name="shadow_length" format="dimension" />
        <attr name="corner_radius" format="dimension" />
        <attr name="center_radius" format="dimension" />
    </declare-styleable>


    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
            <enum name="round_top" value="3" />
            <enum name="round_bottom" value="4" />
        </attr>
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FollowView">
        <attr name="follow" format="enum">
            <enum name="x" value="1" />
            <enum name="y" value="2" />
            <enum name="free" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GradientTextView">
        <attr name="gradient_bold" format="boolean" />
        <attr name="gradient_selectMode" format="boolean" />
        <attr name="gradient_colors" format="reference" />
        <attr name="gradient_positions" format="reference" />
        
        <attr name="gradient_orientation" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="GradientCard">

        <attr name="gradient_card_colors" format="reference" />
        <attr name="gradient_card_positions" format="reference" />
        <attr name="gradient_card_round" format="integer" />

        <attr name="gradient_card_orientation" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>

    </declare-styleable>

</resources>

