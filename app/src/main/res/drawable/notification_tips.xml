<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <size
                android:width="20dp"
                android:height="20dp" />
            <solid android:color="@color/color_7033ff" />
        </shape>
    </item>
    <item
        android:width="8dp"
        android:height="8dp"
        android:gravity="top|right"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/color_ff0404" />
        </shape>
    </item>
</layer-list>

