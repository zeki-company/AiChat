<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.cdsy.aichat.ui.chat.ChatViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            imageUrl="@{viewModel.characterDetail.poster}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/img_ss" />

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:layout_marginTop="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/icon_back" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_corner_30dp"
                android:backgroundTint="#77000000"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="16dp">

                <com.cdsy.aichat.ui.view.CornerImageView
                    android:id="@+id/iv_portrait"
                    imageUrl="@{viewModel.characterDetail.poster}"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:type="circle"
                    tools:src="@drawable/img_ss" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:text="@{viewModel.characterDetail.profile.name}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_portrait"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="hkgyiu mdasfewf" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_start"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/icon_start" />

                        <TextView
                            android:id="@+id/tv_credit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@{String.valueOf(viewModel.credit)}"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            tools:text="5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/message"
                            android:textColor="@color/white"
                            android:textSize="10dp" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/icon_setting"
                app:tint="@color/white" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/ns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/layout_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/bg_corner_12dp"
                    android:backgroundTint="#7C0D0D0D"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_intro"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/icon_intro"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_intro_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="简介"
                        app:layout_constraintBottom_toBottomOf="@id/iv_intro"
                        app:layout_constraintStart_toEndOf="@id/iv_intro"
                        app:layout_constraintTop_toTopOf="@id/iv_intro" />

                    <!-- AI简介 -->
                    <TextView
                        android:id="@+id/tv_intro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="逸林本和你是青梅竹马，但小时候他家人把她接到国外生活，你们无缘再见。但今天你在咖啡馆一眼就认出了她，一瞬间心跳像停止了一样，突然她转过头看向了你，你从她眼睛里看到了疑惑，这时候你的心顿时失落，但还是想去叫..."
                        android:textColor="#80FFFFFF"
                        android:textSize="12dp"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/iv_intro"
                        app:layout_constraintTop_toBottomOf="@+id/tv_intro_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 聊天消息列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:padding="8dp"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_chat_message" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


        <!-- 底部输入区 -->
        <LinearLayout
            android:id="@+id/layout_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bottom_input"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_login_edit_text_def"
                    android:hint="@string/say_sopmething"
                    android:paddingHorizontal="60dp"
                    android:paddingVertical="16dp"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/btn_mic"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:src="@drawable/icon_mic" />

                <ImageView
                    android:id="@+id/btn_send"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/icon_send" />


            </FrameLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_bottom_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_sound"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/img_sound_green"
                app:layout_constraintBottom_toTopOf="@id/tv_mic_tip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_mic_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:gravity="center"
                android:text="松开发送 上滑取消"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@id/iv_bg_mic" />

            <ImageView
                android:id="@+id/iv_bg_mic"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_bottom_mic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_bottom_mic"
                android:layout_width="26dp"
                android:layout_height="38dp"
                android:src="@drawable/iv_bottom_mic"
                app:layout_constraintBottom_toBottomOf="@id/iv_bg_mic"
                app:layout_constraintEnd_toEndOf="@id/iv_bg_mic"
                app:layout_constraintStart_toStartOf="@id/iv_bg_mic"
                app:layout_constraintTop_toTopOf="@id/iv_bg_mic" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>