<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="message"
            type="com.cdsy.aichat.ui.message.Message" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <com.cdsy.aichat.ui.view.CornerImageView
            android:id="@+id/iv_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:type="circle" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="32dp"
            android:ellipsize="end"
            android:text="@{message.title}"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_time"
            app:layout_constraintStart_toEndOf="@id/iv_portrait"
            app:layout_constraintTop_toTopOf="@id/iv_portrait" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:text="@{message.content}"
            android:textColor="#888888"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_time"
            app:layout_constraintStart_toEndOf="@id/iv_portrait"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6月25日 07:23"
            android:textColor="#666666"
            android:textSize="10dp"
            android:visibility="@{message.system?View.GONE:View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_msg_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="#F55762"
            android:gravity="center"
            android:text="@{String.valueOf(message.unReadCount)}"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:visibility="@{message.haveUnRead?View.VISIBLE:View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/tv_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_content"
            tools:text="4"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_go"
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_go"
            android:visibility="@{message.system?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>