<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="chatMessage"
            type="com.cdsy.aichat.ui.chat.ChatMessage" />
    </data>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="48dp"
            android:visibility="@{chatMessage.fromAI?View.GONE:View.VISIBLE}"/>


        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chat_me"
            android:padding="12dp"
            android:textColor="#222222"
            android:textSize="14dp"
            tools:text="sdfdssdfds" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="48dp"
            android:visibility="@{chatMessage.fromAI?View.VISIBLE:View.GONE}"/>

    </LinearLayout>
</layout>