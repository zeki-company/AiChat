<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_top_half">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:id="@+id/view"
                    android:layout_width="46dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_corner_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="CHOOSE TOKEN AMOUNT"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:layout_gravity="end|center_vertical"
                        android:src="@drawable/icon_close" />

                </FrameLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_corner_solid_18dp">

                    <ImageView
                        android:id="@+id/iv_coin"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/icon_coin"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tv_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="200"
                        android:textColor="@color/white"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/iv_coin"
                        app:layout_constraintStart_toEndOf="@id/iv_coin"
                        app:layout_constraintTop_toTopOf="@id/iv_coin" />


                    <TextView
                        android:id="@+id/tv_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="首冲$1.99得"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/iv_coin"
                        app:layout_constraintTop_toBottomOf="@id/tv_coin" />

                    <TextView
                        android:id="@+id/tv_line2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="首冲得"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/tv_line1"
                        app:layout_constraintTop_toBottomOf="@id/tv_line1" />

                    <com.cdsy.aichat.ui.view.GradientTextView
                        android:id="@+id/tv_line1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200代币"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_line1"
                        app:layout_constraintStart_toEndOf="@id/tv_line1"
                        app:layout_constraintTop_toTopOf="@+id/tv_line1" />

                    <com.cdsy.aichat.ui.view.GradientTextView
                        android:id="@+id/tv_line2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VIP7天"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@id/tv_line2"
                        app:layout_constraintStart_toEndOf="@id/tv_line2"
                        app:layout_constraintTop_toTopOf="@id/tv_line2" />

                    <ImageView
                        android:layout_width="124dp"
                        android:layout_height="124dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="8dp"
                        android:src="@drawable/img_vip"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_top_up"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    tools:listitem="@layout/item_top_up" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:text="Top-up not received? Contact us"
                    android:textColor="#C3CBC5"
                    android:textSize="14dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>